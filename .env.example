# Application
APP_NAME=BridgeTrace AI
APP_VERSION=2.0.0
APP_ENV=development
DEBUG=False

# API
API_PREFIX=/api/v2
API_HOST=0.0.0.0
API_PORT=8000

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql://bridgetrace:bridgetrace@localhost:5432/bridgetrace

# Redis
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# AI/LLM
OPENAI_API_KEY=your-openai-key
LLM_MODEL=gpt-4

# Tracing
MAX_TRACE_HOPS=10
